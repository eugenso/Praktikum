                            <td><%= result[i].amount[2]%></td>
                        <% var unsure = result[i].amount[0]-result[i].amount[1]-result[i].amount[2]%>
                        <td><%= unsure %></td>

                    </tr>
                <% } %>
                </tbody>
            </table>
            </div>
            <script>
            $(document).ready(function()
            {
            $("#simpleTable").tablesorter();
