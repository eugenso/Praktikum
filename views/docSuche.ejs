<!-- Sidebar -->
<section id="sidebar">
    <div id="showpicture"></div>
    <div class="inner">

        <nav>
            <ul>
                <li><a href="./">Startseite</a></li>
                <li><a href="gerichte">Statistiken</a></li>
                <li><a href="docSuche">Dokumente suchen</a></li>
                <li><a href="pieCreator">Kuchen generator</a></li>

            </ul>
        </nav>
    </div>
    <script>
        var windowWidth = $(window).width();
        console.log(windowWidth);
        if($(window).width()<1280){
            console.log("kleiner");
            document.getElementById("showpicture").style.display = "none";
        }
        else{
            console.log("größer");
            document.getElementById("showpicture").style.display = "flex";
        }
        $(window).resize(function() {
            console.log('window was resized'+$(window).width());
            if($(window).width()<1280){
                console.log("kleiner");
                document.getElementById("showpicture").style.display = "none";
            }
            else{
                console.log("größer");
                document.getElementById("showpicture").style.display = "flex";
            }
        });
    </script>
</section>



<!-- Wrapper -->
<div id="wrapper">

    <!-- Intro -->

    <section id="intro" class="wrapper style1 fullscreen fade-up">
        <div class="inner">
            <img src="images/watson.png" height="100">
            <img src="images/solr.png" height="75"><br>
            <br>

            <form  id="form1" method="post" action="docSuche">
                <select name="searchModus" style="width:130px; float:left; text-align:center" >
                    <option>AllFields</option>
                    <option>_text_</option>
                    <option>_ID_</option>
                </select>
                <input style="width:300px;" type="text" name="suchfeld" id="suchfeld" /><br>&nbsp;
                <input type="submit" name="suchen" id="suchen"/>
            </form>

            <% if(result != undefined){ %>
                <% if(result.message != "nix" ) { %>
                    <%= result.message %><br>
                <% } %>

                <% if(result.message == "nix" ){ %>
                    Suchwort: <%= result.searchword %> <br><br>
                    Gefunden in den folgenden Dokumenten: (<%= result.amount %> Dokumente)<br>
                    <form id="form1" method="post" action="singleDoc">
                    <% for(var i = 0; i< result.docs.length; i++){ %>

                            <button style="width:200px; height:30px; line-height: normal; text-transform:none; border-radius: 0em;" name="docid" value="<%= result.docs[i].name %>" type="submit"><%= result.docs[i].name %></button>
                    <% } %>
                    </form>
                <%} %>
            <%} %>

        </div>
    </section>

</div>


